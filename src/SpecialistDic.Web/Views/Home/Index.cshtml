
<div class="cell grid-x grid-padding-x grid-padding-y align-center">
    @for (int i = 97; i < 123; i++)
    {
        <a class="button secondary zdv-border-light" asp-route-q="@((char)i)">@((char)i)</a>
    }
</div>

